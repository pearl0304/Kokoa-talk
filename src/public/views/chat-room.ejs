<%- include('include/head.ejs')%>
    <title>Chat Room - Kokoa Talk</title>
</head>
<body id="chat-screen">
    <%- include('include/status_bar.ejs')%>
    <header class="alt-header">
        <div class="alt-header__column">
            <a href="chat-list.html"><i class="fas fa-angle-left fa-2x"></i></a>   
        </div>
        <div class="alt-header__column">
            <h1 class="alt-header__title">루피</h1>
        </div>
        <div class="alt-header__column">
            <span><i class="fas fa-search fa-lg"></i></span>
            <span><i class="fas fa-bars fa-lg"></i></span>

        </div>
    </header>

    <main class="main-screen main-chat">
        <div class="chat__timestamp">
            Monday, Desember 13, 2021
        </div>

        <div class="message-row">
            <img src="http://file3.instiz.net/data/cached_img/upload/2021/01/27/18/2ce2f41f7e9f09c0acc77faac7452dbf.jpg" alt="">
            <div class="message-row__content">
                <span class="message__author">루피</span>
                <div class="message__info">
                    <span class="message__bubble">Hi!</span>
                    <span class="message__time">21:27</span>
                </div>
            </div>
        </div>

        <div class="message-row message-row--own">
            <div class="message-row__content">
                <div class="message__info">
                    <span class="message__bubble">What's Up</span>
                    <span class="message__time">21:27</span>
                </div>
            </div>
        </div>
    </main>  
    <form id="message-form">
        <div class="message-form__coulum">
            <i class="far fa-plus-square fa-lg"></i>
        </div>
        <div class="message-form__coulum">
            <input type="text" placeholder="Write a message"/>
            <i class="far fa-smile-wink"></i>
            <button>
                <i class="fas fa-arrow-up"></i>
            </button>
        </div>
    </form>
    
<%- include('include/tail.ejs')%>