<%- include('include/head.ejs')%>
    <title>Profile - Kokoa Talk</title>
</head>
<body id="profile-screen">
    <%- include('include/status_bar.ejs')%>
    <header class="screen-header">
        <div class="screen-header__icons__profile">
            <div class="icons__profile__left">            
                <a href="/friends"><i class="fas fa-times"></i></a>
            </div>
            <div class="icons__profile__right">
                <a><i class="fas fa-gift"></i></a>
                <a><i class="fas fa-music"></i></a>
                <a><i class="far fa-star"></i></a>
            </div>
        </div>
    </header>  
    <main class="profile__wrap">
        <div class="profile">
            <div class="profile-profileImg">
                <img src="<%=profileImg%>">
            </div>
            <span class="profile-userNick"><%=userNick%></span>
            <span class="profile-userNick"><%=statusMessage%></span>
        </div>
        <div class="profile-icon__lists">
            <div class="profile-icon__list">
                <a href="/chat/room/:<%=_id%>">
                    <i class="fas fa-comment"></i>
                    <span class="profile-icon__name">Chat</span>
                </a>
            </div>
            <div class="profile-icon__list">
                <i class="fas fa-phone-alt"></i>
                <span class="profile-icon__name">Call</span>
            </div>   
        </div>
    </main>   
<%- include('include/tail.ejs')%>