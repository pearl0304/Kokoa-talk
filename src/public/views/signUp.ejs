<%- include('include/head.ejs')%>
    <title>signUp - Kokoa Talk</title>
</head>
<body>
    <%- include('include/status_bar.ejs')%>
    <header class="welcome-header">
        <h1 class="welcome-header__title">Welcome to Kokoa Talk</h1>
    </header>
    <form id="signUp-form" action="/user/signUp" method="post" enctype="multipart/form-data">
        <div class="profile">
            <input id="profile-img" type="file" name="profile-img" class="hidden">
            <label for="profile-img">
                <img src="/public/images/profile.svg" alt="profile-icon" class="profile-img">
                <img src="/public/images/plus.svg" alt="plus-icon" class="plus-icon">
            </label>
        </div>
        <input type="email" name="userEmail" placeholder="Email or phone number" required/>
        <input type="text" name="userNick" minlength="2" maxlength="8" 
               placeholder="Please enter the nickname you want to use (2~8)" required/>
        <input type="password" name="userPw" minlength="4" max="12" 
                placeholder="Password (4~12)" required/>
        <input type="submit" value="Sign Up" />
    </form> 
    <script src="/js/signUp_form_check.js"></script>
<%- include('include/tail.ejs')%>